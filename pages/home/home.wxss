/* pages/home/home.wxss */
.swipercontent {
  position: relative;
}

swiper{
  width: 100%;
  height:340rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

.dots{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
}
.dot.active{
  width: 24rpx;
  background: #f80;
}

.other {
  width: 100%;
  height: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}
.box {
  width: 94%;
  height: 150px;
  background-color: #fff;
}

.top {
  display: flex;
  flex-direction: row;
  padding: 5rpx;
  width: 80%;
  border-bottom: 1px solid black;
  align-items: flex-end;
}

.txt1 {
  font-size: 35rpx;
  font-weight: 700;
}
.txt2 {
  font-size: 12px;
  font-weight: 400;
  margin-left: 10rpx;
}
.txt3 {
  font-size: 12px;
  font-weight: 400;
  margin-left: 10rpx;
}

.middle {
  width: 96%;
  padding: 10rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
}
.img {
  width: 80rpx;
  height: 80rpx;
}

.txt4 {
  margin-left: 40rpx;
}
.text {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.txt5 {
  color: #fff;
  background-color: blue;
  border-radius: 6rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 6rpx;
}

.txt6 {
  font-size: 24rpx;
}

.footer {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
}
.texts {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.left {
  display: flex;
  flex: 1;
  flex-direction: row;
}
.right {
  display: flex;
  flex: 1;
  flex-direction: row;
}

.txt7 {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.imgs {
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx;
}
.button{
  border-style: none;
}
button::after{
  border:none;
}
button{
  /* font-size: 28rpx; */
  background-color: #fff;
  border:none;
  padding: 0;
  margin: 0;
  line-height: 1;
}
 